<example-block title="基础用法">
  <o-collapse value="{{ active1 }}" data-key="active1" bind:change="onChange">
    <o-collapse-item title="{{ title1 }}">{{ content1 }}</o-collapse-item>
    <o-collapse-item title="{{ title2 }}">{{ content2 }}</o-collapse-item>
    <o-collapse-item title="{{ title3 }}" disabled>{{ content3 }}</o-collapse-item>
  </o-collapse>
</example-block>

<example-block title="手风琴">
  <o-collapse value="{{ active2 }}" data-key="active2" accordion bind:change="onChange">
    <o-collapse-item title="{{ title1 }}">{{ content1 }}</o-collapse-item>
    <o-collapse-item title="{{ title2 }}">{{ content2 }}</o-collapse-item>
    <o-collapse-item title="{{ title3 }}">{{ content3 }}</o-collapse-item>
  </o-collapse>
</example-block>